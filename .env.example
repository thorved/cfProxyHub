# Application Configuration
APP_ENV=production
APP_PORT=8080
GIN_MODE=release

# Database Configuration
DB_PATH=/app/data/cfproxy.db

# Cloudflare API Configuration
# Get these from your Cloudflare dashboard
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_EMAIL=your_email@example.com
CLOUDFLARE_API_KEY=your_cloudflare_global_api_key_here

# Cloudflared Tunnel Configuration
# Get tunnel token from: cloudflared tunnel login && cloudflared tunnel create <name>
TUNNEL_TOKEN=your_tunnel_token_here
TUNNEL_NAME=cfproxy-tunnel

# Optional: External Database Configuration (if using PostgreSQL)
# DB_PASSWORD=your_secure_database_password
# POSTGRES_DB=cfproxy
# POSTGRES_USER=cfproxy

# Optional: Redis Configuration (if using Redis)
# REDIS_PASSWORD=your_secure_redis_password

# Security Configuration
# JWT_SECRET=your_jwt_secret_key_here
# SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
